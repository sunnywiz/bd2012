@model BD2012.Models.BurndownViewModel
@{
    ViewBag.Title = "Burndown";
}

<table>
    <tr>
        <th>Item</th>
        <th>Low</th>
        <th>High</th>
        <th>Left</th>
        <th>Actual</th>
    </tr>
    @for(int i=0; i<Model.Rows.Count; i++)  
    {
        var item = Model.Rows[i];
        <tr>
            <td>
                <div class="bd-item" style="padding-left: @(item.PixelIndent)px">@item.Name</div>
            </td>
            @if (item.IsCalculated)
            {
                <td><em>@item.Low</em></td>
                <td><em>@item.High</em></td>
                <td><em>@item.Left</em></td>
                <td><em>@item.Actual</em></td>
            } else { 
            <td>@item.Low</td>
            <td>@item.High</td>
            <td>
                @Html.TextBoxFor(x=>x.Rows[i].Left)
            </td>
            <td>@item.Actual</td>
            }
        </tr>
    }
</table>